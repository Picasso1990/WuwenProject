<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <RelativeLayout
        android:id="@+id/rl_regard"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bg_white">

        <ImageView
            android:id="@+id/back_regard"
            android:src="@drawable/ic_action_left"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/text_regard"
            android:layout_centerInParent="true"
            android:text="关于无闻"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:id="@+id/view_regard"
        android:layout_below="@+id/rl_regard"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <RelativeLayout
        android:id="@+id/rl_tb_regard"
        android:layout_below="@+id/view_regard"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/image_regard"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_yuyin"
            android:layout_width="60dp"
            android:layout_height="60dp" />

        <TextView
            android:layout_below="@+id/image_regard"
            android:layout_centerHorizontal="true"
            android:text="无闻"
            android:textColor="#000"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/weibo_regard"
        android:layout_below="@id/rl_tb_regard"
        android:background="@color/bg_white"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:text="微博"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/image_right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_action_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:id="@+id/view_weibo_regard"
        android:layout_below="@+id/weibo_regard"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <RelativeLayout
        android:id="@+id/weixin_regard"
        android:layout_below="@id/view_weibo_regard"
        android:background="@color/bg_white"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:text="微信"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="linguangyu1996"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:id="@+id/view_weixin_regard"
        android:layout_below="@+id/weixin_regard"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <RelativeLayout
        android:id="@+id/QQ_regard"
        android:layout_below="@id/view_weixin_regard"
        android:background="@color/bg_white"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:text="QQ"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="1422052929"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</RelativeLayout>